require "eslintrb/eslinttask"

task default: %w[eslint]

task :test do
    desc "Printing this from the rakefile!"
end

Eslintrb::EslintTask.new :eslint do |t|
  options =
    {
      rules: {
        'no-bitwise' => 0,
        'curly' => 0,
        'eqeqeq' => 0,
        'guard-for-in' => 0,
        'no-use-before-define' => 0,
        'no-caller' => 0,
        'no-new-func' => 0,
        'no-plusplus' => 0,
        'no-undef' => 0,
        'strict' => 0
      },
      env: {
        'browser' => true
      }
    }
  t.pattern = 'src/main/content/_assets/js/*.js'
  t.options = options
end